# Backend Environment Variables
# Copy this file to .env and fill in your API keys

# OpenWeatherMap API Key (get from https://openweathermap.org/api)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# CORS Origins (adjust for production)
CORS_ORIGINS=http://localhost:3000,http://localhost:4200

# Database URL (if using database for user data)
DATABASE_URL=sqlite:///./alert_aid.db

# Twilio for SMS alerts (optional)
TWILIO_ACCOUNT_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_token_here

# Google Maps API (for geocoding and routing)
GOOGLE_MAPS_API_KEY=your_google_maps_key_here

# API Rate Limiting
MAX_REQUESTS_PER_MINUTE=60

# ML Model Settings
MODEL_REFRESH_INTERVAL_HOURS=24
PREDICTION_CACHE_TTL_MINUTES=5